{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": "./",
    "declaration": false,
    "esModuleInterop": true,
    "lib": [
      "es6",
      "es7",
      "esnext",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "ES2020",
    "plugins": [
      {
        "transform": "@pawi/transform"
      }
    ]
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "notes",
    "dist"
  ]
}